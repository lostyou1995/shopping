@model IEnumerable<shopping.Models.Author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div id="content" class="span10">
    <div>
        <h2>Trang Tác Giả</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.author_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.author_Slug)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.author_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.author_Slug)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.author_Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.author_Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.author_Id })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>