@model IEnumerable<shopping.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div id="content" class="span10">
    <h2>Trang Đặt Hàng</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.order_Datetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.customer_Fullname)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.order_Datetime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.customer_Fullname)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.detail_Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.detail_Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.detail_Id })
                </td>
            </tr>
        }

    </table>
    </div>