@model IEnumerable<shopping.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div id="content" class="span10">
    <div>

        <h2>Trang Quản Lý Loại</h2>

        <p>
            @Html.ActionLink("Create New", "Create") @Html.ActionLink("Tìm Thể Loại", "FindCategory")
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.category_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.category_Slug)
                </th>
                <th class="textTransform">hành động</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.category_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category_Slug)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Category",new { @id=item.category_Id})" title="Chỉnh sửa">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                        </a>
                        |
                        <a href="@Url.Action("Details","Category",new { @id=item.category_Id})" title="Chi tiết">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>
                        |
                        <a href="@Url.Action("Delete","Category",new { @id=item.category_Id})" title="Xoá" style="color:red">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>
