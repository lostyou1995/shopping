@model IEnumerable<shopping.Models.Path>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div id="content" class="span10">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pathName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pathDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pathUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.display)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.parentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.active)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pathName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pathDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pathUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.imageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.display)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.parentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.active)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
    </div>