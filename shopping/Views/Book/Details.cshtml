@model shopping.Models.Book

@{
    ViewBag.Title = @Html.DisplayFor(model => model.book_Title);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<div class="col-sm-9 padding-right">
    <div class="product-details">
        <!--product-details-->
        <div class="col-sm-5">
            <div class="view-product">
                <img src="~/Content/fontEnd/images/book/@Html.DisplayFor(model=>model.book_Image)" title="@Html.DisplayFor(model=>model.book_Title)" />
            </div>

        </div>
        <div class="col-sm-7">
            <div class="product-information">
                <!--/product-information-->
                <h2 class="textTransform">@Html.DisplayFor(model => model.book_Title)</h2>
                
                    <p class="textTransform">
                        <b>Giá bán : </b>
                       @String.Format("{0:0,0}", Model.book_Price) VND

                    </p>
                <p class="textTransform">
                    <b>Tác giả: </b>@{
                        foreach (var author in Model.Authors)
                        {
                            @author.author_Name
                        }
                    }
                </p>
                <p class="textTransform">
                    <b>Nhà xuất bản : </b>@Html.DisplayFor(model=>model.Publisher.publisher_Name)
                </p>
                <p class="textTransform"><b>Năm xuất bản : </b> @Html.DisplayFor(model => model.book_Year)</p>
                <p>
                    <b>
                        @using (Html.BeginForm("AddCartitem", "CartItem", new { @id = @Html.DisplayFor(model => model.book_Id), @url = Request.Url.ToString() }))
                        { 
                        <button type="submit" class="btn btn-fefault cart">
                            <i class="fa fa-shopping-cart"></i>
                            Thêm vào giỏ hàng
                        </button>
                        }
                    </b>
                </p>
            </div><!--/product-information-->
        </div>
    </div>
    <div>
        <h1>Giới thiệu sách</h1>
        <p style="text-align:justify;">
            @Html.DisplayFor(model => model.book_Description)
        </p>
    </div>
    <div>
        <div class="recommended_items">
            <!--recommended_items-->
            <h2 class="title text-center">Sách cùng chủ đề</h2>

        @Html.Action("RecommendCategory", "Category", new { id = Model.category_Id })
        </div><!--/recommended_items-->
    </div>
</div>
