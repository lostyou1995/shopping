@model IEnumerable<shopping.Models.Publisher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div id="content" class="span10">
    
    <div>
        <h2>Trang Nhà Xuất Bản</h2>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.publisher_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.publisher_Slug)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.publisher_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.publisher_Slug)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.publisher_Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.publisher_Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.publisher_Id })
                    </td>
                </tr>
            }

        </table>
    </div>
    </div>
